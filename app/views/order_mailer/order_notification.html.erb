<table align="center" width="400px" cellpadding="0" cellspacing="0"
  style="border-radius: 15px" bgcolor="#b3daff">
  <tr>
    <td align="center" bgcolor="#e6e6e6" 
      style="font-family: Arial, sans-serif; 
        font-size: 20px; font-weight: bold;
        border-radius: 15px 15px 0 0;
        padding: 10px; border-bottom: 1px solid black;">
        Order info
    </td>
  </tr>
  <tr>
    <table width="350px" align="center" 
      style="padding: 20px 10px">
      <tr>
        <td>Product name</td>
        <td>Quantity</td>
        <td>Price</td>
      </tr>
      <% @order.order_info.each do |row| %>
        <tr>
          <td><%= row.name %></td>
          <td><%= row.quantity %></td>
          <td><%= row.quantity*row.price %></td>
        </tr>
      <% end %>
      <tr>
        <td>Total</td>
        <td></td>
        <td><%= @order.total %></td>
      </tr>
    </table>
  </tr>
  <tr>
    <td align="center" bgcolor="#e6e6e6"
      style="font-family: Arial, sans-serif;
      font-size: 14px; font-style: italic;
      border-radius: 0 0 15px 15px;
      padding: 10px; border-top: 1px solid black;">
        Shop-app, 2016
    </td>
  </tr>
</table>