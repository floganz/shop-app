<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Total $</th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% @order_items.each do |row| %>
        <tr>
          <td><%= row.product.name %></td>
          <td><%= row.quantity %></td>
            <% total+=row.quantity*row.price %>
          <td><%= row.quantity*row.price %> $</td>
        </tr>
      <% end %>
      <tr>
        <th>
          Total
        </th>
        <th></th>
        <th>
          <%= total %> $
        </th>
      </tr>
    </tbody>
  </table>
</div>